extends layouts/layout.pug

block scripts
  script.
    window.PageApi = {
      onCopyLinkClick() {
        const id = event.target.id;
        navigator.clipboard.writeText(id)
        GlobalApi.Toast.show("Link Copied")
      }
    }

block content
  .h-100.d-flex.flex-column.overflow-auto
    .col-6.mt-4.mx-auto.text-center
      h3 Free URL Shortener
      h6.text-secondary Create short & memorable links in seconds.
      a.btn.btn-lg.w-100.btn-primary(href="/link/0" role="button" style={'max-width': '400px'}) Add URL

    if links.length > 0
      .mt-4
      each link in links
        include partials/link_card
    else
      .d-flex.align-items-center.justify-content-center.flex-grow-1 No saved URLs found.